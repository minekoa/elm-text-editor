stringEscape: String -> String
stringEscape str =
    str |> String.toList
        |> List.map (\ c ->
                         case c of
                             '\\' -> "\\\\"
--                             '\0' -> "\\0"
--                             '\a' -> "\\a"
--                             '\b' -> "\\b"
--                             '\f' -> "\\f"
                             '\n' -> "\\n"
                             '\r' -> "\\r"
                             '\t' -> "\\t"
--                             '\v' -> "\\v"
                             otherwise -> String.fromChar otherwise
                    )
        |> String.concat

